<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Icon="/Res/пицца.ico"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel HorizontalAlignment="Center" Margin="0,0,0,294">
             <TextBlock Text="Главная страница" HorizontalAlignment="Center" FontFamily="Segoe UI" FontSize="16"/>
            <Image Margin="10" Width="100" Height="100" Source="/Res/пицца.png" />
        </StackPanel>
       
        <StackPanel Margin="10" HorizontalAlignment="Center" Orientation="Horizontal">
            
            <Button Margin="20" Width="150" Height="35" x:Name="ToClients" Click="ToClients_Click" Content="Список клиентов"/>
        <Button Width="150" Height="35" x:Name="ToOrders" Click="ToOrders_Click" Content="Список заказов"/>
        </StackPanel>
        
    </Grid>
</Window>
